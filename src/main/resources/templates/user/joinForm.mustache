{{> /layout/header}}

<div class="container p-5">

    <!-- 요청을 하면 localhost:8080/join POST로 요청됨
    username=사용자입력값&password=사용자값&email=사용자입력값 -->

    <div class="card">
        <div class="card-header"><b>회원가입을 해주세요</b></div>
        <div class="card-body">
            <form action="/join" method="post" onsubmit="return valid()" enctype="application/x-www-form-urlencoded">
                <div class="mb-3">
                    <input id="username" type="text" class="form-control" placeholder="Enter username" name="username" onkeyup="check()">
                    <button type="button" onclick="usernameSameCheck()" class="btn btn-warning">아이디중복체크</button>
                    <span id="idCheck">아이디를 입력하세요</span>
<!--                    <script>-->
<!--                        let isSameCheck = false; // true 일 떄 실행-->

<!--                        function check() {-->
<!--                            let username = $("#username")-->
<!--                        }-->
<!--                    </script>-->
<!--                    <span class="text-danger">아이디가 중복되지 않았습니다.</span>-->
                </div>

                <div class="mb-3">
                    <input type="password" class="form-control" placeholder="Enter password" name="password">
                </div>
                <div class="mb-3">
                    <input type="email" class="form-control" placeholder="Enter email" name="email">
                </div>
                <button type="submit" class="btn btn-primary form-control">회원가입</button>
            </form>
        </div>
    </div>
</div>

<script>
    let isSameCheck = false; // true 일 때 실행

    function valid() {
        if (isSameCheck == false) {
            alert("아이디 중복 체크를 해야합니다.")
        }
        return isSameCheck;
    }

    function usernameSameCheck() {
        let username = $("#username").val()

        $.ajax({
            url: "/api/username-same-check?username=" + username,
            type: "get"
        }).done((res) => {
            console.log(res);
            if (res.body === true) {
                isSameCheck = true;
                alert("아이디 중복체크가 완료되었습니다.");
            } else {
                isSameCheck = false;
                alert("동일한 아이디가 존재합니다.");
            }
        }).fail((res) => {
            alert(res.responseJSON.msg)
        })
    }

    /*----------------------------------------------------------------------------------------------------------*/

    function check() {
        let username = $("#username").val() // input id 가져오려고

        $.ajax({
            url: "/api/username-same-check?username=" + username,
            type: "get"
        }).done((res) => {
            console.log(res);
            if (res.body === true) {
                isSameCheck = true;
                $("#idCheck").text("사용가능한 아이디입니다.")
            } else {
                isSameCheck = false;
                $("#idCheck").text("중복된 아이디입니다.")
            }
        }).fail((res) => {
            alert(res.responseJSON.msg)
        })
    }



</script>

